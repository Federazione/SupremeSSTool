<Window x:Class="SupremeScreenSharePro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Supreme ScreenShare Pro - Minecraft Cheat Detector" 
        Height="800" Width="1200"
        Style="{StaticResource CyberWindow}"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1a1a1a" CornerRadius="10" Margin="0,0,0,10" Padding="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="[ SUPREME SCREENSHARE PRO ]" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="#FFFFFF" 
                          VerticalAlignment="Center"/>
                <TextBlock Text="v1.0 by Federazione" 
                          FontSize="14" 
                          Foreground="#CCCCCC" 
                          VerticalAlignment="Center" 
                          Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0" x:Name="btnInjectionScan" 
                   Content="INJECTION" 
                   Style="{StaticResource CyberButton}" 
                   Margin="5" 
                   Click="BtnInjectionScan_Click"/>
            
            <Button Grid.Row="0" Grid.Column="1" x:Name="btnBamScan" 
                   Content="BAM" 
                   Style="{StaticResource CyberButton}" 
                   Margin="5" 
                   Click="BtnBamScan_Click"/>
            
            <Button Grid.Row="0" Grid.Column="2" x:Name="btnModScan" 
                   Content="MODS" 
                   Style="{StaticResource CyberButton}" 
                   Margin="5" 
                   Click="BtnModScan_Click"/>
            
            <Button Grid.Row="0" Grid.Column="3" x:Name="btnUsbScan" 
                   Content="USB" 
                   Style="{StaticResource CyberButton}" 
                   Margin="5" 
                   Click="BtnUsbScan_Click"/>
            
            <Button Grid.Row="0" Grid.Column="4" x:Name="btnProcessScan" 
                   Content="PROCESSES" 
                   Style="{StaticResource CyberButton}" 
                   Margin="5" 
                   Click="BtnProcessScan_Click"/>
            
            <Button Grid.Row="0" Grid.Column="5" x:Name="btnRecycleScan" 
                   Content="RECYCLE" 
                   Style="{StaticResource CyberButton}" 
                   Margin="5" 
                   Click="BtnRecycleScan_Click"/>
            
            <Button Grid.Row="1" Grid.Column="0" x:Name="btnUserAssist" 
                   Content="USER ASSIST" 
                   Style="{StaticResource CyberButton}" 
                   Margin="5" 
                   Click="BtnUserAssist_Click"/>
            
            <Button Grid.Row="1" Grid.Column="1" x:Name="btnBrowserScan" 
                   Content="BROWSER" 
                   Style="{StaticResource CyberButton}" 
                   Margin="5" 
                   Click="BtnBrowserScan_Click"/>
            
            <Button Grid.Row="1" Grid.Column="2" x:Name="btnMemoryScan" 
                   Content="MEMORY" 
                   Style="{StaticResource CyberButton}" 
                   Margin="5" 
                   Click="BtnMemoryScan_Click"/>
            
            <Button Grid.Row="1" Grid.Column="3" x:Name="btnUsnScan" 
                   Content="USN JOURNAL" 
                   Style="{StaticResource CyberButton}" 
                   Margin="5" 
                   Click="BtnUsnScan_Click"/>
            
            <Button Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" x:Name="btnUltraScan" 
                   Content="ULTRA SCAN (ALL)" 
                   Style="{StaticResource CyberButton}" 
                   Margin="5" 
                   Background="#FFFFFF" 
                   Foreground="#000000"
                   Click="BtnUltraScan_Click"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="[ SCAN LOG ]" Style="{StaticResource CyberLabel}"/>
                <Label x:Name="lblStatus" Content="Ready" Style="{StaticResource CyberLabel}" Margin="20,0,0,0"/>
                <Label x:Name="lblRedFlags" Content="Red Flags: 0" Style="{StaticResource CyberLabel}" Margin="20,0,0,0"/>
            </StackPanel>

            <TextBox x:Name="txtLog" 
                    Grid.Row="1" 
                    Style="{StaticResource CyberTextBox}" 
                    Text="Supreme ScreenShare Pro initialized...&#x0a;"/>
        </Grid>

        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <ProgressBar x:Name="progressBar" 
                        Grid.Column="0" 
                        Style="{StaticResource CyberProgressBar}" 
                        Margin="0,0,10,0" 
                        Value="0"/>
            
            <Label x:Name="lblProgress" 
                   Grid.Column="1" 
                   Content="0%" 
                   Style="{StaticResource CyberLabel}" 
                   Width="50"/>
            
            <Button Grid.Column="2" 
                   x:Name="btnGenerateReport" 
                   Content="GENERATE REPORT" 
                   Style="{StaticResource CyberButton}" 
                   Margin="5" 
                   Click="BtnGenerateReport_Click"/>
            
            <Button Grid.Column="3" 
                   x:Name="btnClearLog" 
                   Content="CLEAR" 
                   Style="{StaticResource CyberButton}" 
                   Margin="5" 
                   Click="BtnClearLog_Click"/>
            
            <Button Grid.Column="4" 
                   x:Name="btnSelfDestruct" 
                   Content="SELF DESTRUCT" 
                   Style="{StaticResource CyberButton}" 
                   Margin="5" 
                   Background="#000000" 
                   Foreground="#FFFFFF"
                   Click="BtnSelfDestruct_Click"/>
        </Grid>
    </Grid>
</Window>