<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="Federazione Mod Analyzer"
        Height="600" Width="950"
        Background="#0c0c0c">

<Grid Margin="10">
<Grid.RowDefinitions>
<RowDefinition Height="Auto"/>
<RowDefinition Height="*"/>
<RowDefinition Height="Auto"/>
</Grid.RowDefinitions>

<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
<Button Name="BtnSystem" Content="System" Margin="5"/>
<Button Name="BtnBam" Content="BAM" Margin="5"/>
<Button Name="BtnUSB" Content="USB" Margin="5"/>
<Button Name="BtnMods" Content="Mods" Margin="5"/>
<Button Name="BtnRecycle" Content="Recycle" Margin="5"/>
<Button Name="BtnAll" Content="SCAN ALL" Background="#8b0000" Foreground="White" Margin="5"/>
</StackPanel>

<TextBox Name="LogBox"
Grid.Row="1"
Background="#000000"
Foreground="#ff3b3b"
FontFamily="Consolas"
FontSize="13"
IsReadOnly="True"
VerticalScrollBarVisibility="Auto"/>

<ProgressBar Name="Progress"
Grid.Row="2"
Height="20"
Minimum="0"
Maximum="100"
Foreground="#b30000"/>

</Grid>
</Window>
