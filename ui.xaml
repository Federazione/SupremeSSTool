<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        Title="Federazione Mod Analyzer"
        Height="500" Width="800"
        Background="#111">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Name="BtnSystem" Content="System" Margin="5" />
            <Button Name="BtnMods" Content="Mods" Margin="5" />
            <Button Content="USB" Margin="5" />
            <Button Content="Recycle Bin" Margin="5" />
        </StackPanel>

        <TextBox Name="LogBox"
                 Grid.Row="1"
                 Background="#000"
                 Foreground="Red"
                 FontFamily="Consolas"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
